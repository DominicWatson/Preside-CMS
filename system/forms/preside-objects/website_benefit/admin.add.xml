<?xml version="1.0" encoding="UTF-8"?>
<!--#!autodoc
Website benefit: add form

This form is used for the "add website benefit" form in the website user manager
-->
<form>
	<tab id="basic" sortorder="10">
		<fieldset id="basic" sortorder="10">
			<field binding="website_benefit.label"                           sortorder="10"  />
			<field binding="website_benefit.description"                     sortorder="20"  />
			<field name="permissions"                                        sortorder="30" control="websitePermissionsPicker" label="cms:website.permissions.picker.label" help="cms:website.permissions.picker.help" />
		</fieldset>
	</tab>

	<tab id="rules" sortorder="20">
		<fieldset id="combo" sortorder="10">
			<field binding="website_benefit.combined_benefits"               sortorder="10"  />
			<field binding="website_benefit.combined_benefits_are_inclusive" sortorder="20" control="select" values="0,1" labels="preside-objects.website_benefit:exclusive.label,preside-objects.website_benefit:inclusive.label" defaultValue="0" />
		</fieldset>
		<fieldset id="condition" sortorder="20" feature="rulesengine">
			<field binding="website_benefit.rules_engine_condition"          sortorder="30" control="conditionPicker" ruleContext="user" quickAdd="true" quickEdit="true" />
		</fieldset>
	</tab>
</form>