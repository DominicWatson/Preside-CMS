<?xml version="1.0" encoding="UTF-8"?>
<form i18nBaseUri="preside-objects.email_template:">
	<tab id="default">
		<fieldset id="provider" sortorder="10">
			<field binding="email_template.service_provider" control="emailServiceProviderPicker" sortorder="10" label="" layout="" />
		</fieldset>
		<fieldset id="method" sortorder="20">
			<field binding="email_template.sending_method" control="enumRadioList" sortorder="10" label="" layout="" />
		</fieldset>
		<fieldset id="schedule" sortorder="30">
			<field binding="email_template.schedule_type" control="enumRadioList" sortorder="10" label="" layout="" />
		</fieldset>
		<fieldset id="schedule_fixed" sortorder="40" class="sub-fieldset col-sm-offset-1">
			<field binding="email_template.schedule_date"                         sortorder="20" />
		</fieldset>
		<fieldset id="schedule_repeat" sortorder="50" class="sub-fieldset col-sm-offset-1">
			<field binding="email_template.schedule_start_date" sortorder="10" />
			<field binding="email_template.schedule_end_date"   sortorder="20" />
			<field binding="email_template.schedule_measure"    sortorder="30" layout="formcontrols.layouts.timeUnitAndMeasureField" measure="true" label="preside-objects.email_template:field.schedule_measure.formtitle"/>
			<field binding="email_template.schedule_unit"       sortorder="40" layout="formcontrols.layouts.timeUnitAndMeasureField" unit="true" />
		</fieldset>
		<fieldset id="limit" sortorder="60">
			<field binding="email_template.sending_limit" control="enumRadioList" sortorder="10" label="" layout="" />
		</fieldset>
		<fieldset id="limit_details" sortorder="70" class="sub-fieldset col-sm-offset-1">
			<field binding="email_template.sending_limit_measure" sortorder="10" layout="formcontrols.layouts.timeUnitAndMeasureField" measure="true" label="preside-objects.email_template:field.sending_limit_measure.formtitle"/>
			<field binding="email_template.sending_limit_unit"    sortorder="20" layout="formcontrols.layouts.timeUnitAndMeasureField" unit="true" />
		</fieldset>
	</tab>
</form>