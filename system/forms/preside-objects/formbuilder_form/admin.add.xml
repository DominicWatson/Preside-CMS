<?xml version="1.0" encoding="UTF-8"?>
<!--#!autodoc
Form builder form: add form

This form is used for adding forms to the form builder system.
-->
<form i18nBaseUri="preside-objects.formbuilder_form:">
	<tab id="default">
		<fieldset id="default" sortorder="10">
			<field sortorder="10" binding="formbuilder_form.name"                   control="textinput" />
			<field sortorder="20" binding="formbuilder_form.button_label"           control="textinput" />
			<field sortorder="30" binding="formbuilder_form.use_captcha"                                />
			<field sortorder="40" binding="formbuilder_form.form_submitted_message"                     />
			<field sortorder="50" binding="formbuilder_form.description"            control="textarea"  />
			<field sortorder="60" binding="formbuilder_form.active_from"                                />
			<field sortorder="70" binding="formbuilder_form.active_to"                                  />
			<field sortorder="80" binding="formbuilder_form.notification_enabled"                       />
		</fieldset>
		<fieldset id="submission_retention" sortorder="15">
			<field sortorder="10" binding="formbuilder_form.submission_remove_enabled" />
			<field sortorder="20" binding="formbuilder_form.submission_remove_after"   />
		</fieldset>
		<fieldset id="access" sortorder="20" feature="websiteUsers">
			<field sortorder="10" binding="formbuilder_form.require_login" />
			<field sortorder="20" binding="formbuilder_form.access_condition" quickadd="true" quickedit="true" feature="rulesengine" />
			<field sortorder="30" binding="formbuilder_form.login_required_content" />
			<field sortorder="40" binding="formbuilder_form.access_denied_content" />
		</fieldset>
	</tab>
</form>